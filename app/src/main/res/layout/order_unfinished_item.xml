<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/unfinished_provider_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="服务商"
        android:textSize="14sp"
        android:textColor="#000000"
        android:alpha="0.65"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffb300"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#eeeeee">

        <ImageView
            android:id="@+id/unfinished_avator"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@mipmap/fserve_beauty" />

        <TextView
            android:id="@+id/unfinished_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/unfinished_avator"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/unfinished_avator"
            android:layout_toRightOf="@+id/unfinished_avator"
            android:text="维修服务"
            android:textSize="16sp"
            android:textColor="#000000"
            android:alpha="0.65"/>

        <TextView
            android:id="@+id/unfinished_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/unfinished_service_name"
            android:layout_alignStart="@+id/unfinished_service_name"
            android:layout_below="@+id/unfinished_service_name"
            android:layout_marginTop="12dp"
            android:text="备注"
            android:textSize="14sp"
            android:textColor="#000000"
            android:alpha="0.65"/>

        <TextView
            android:id="@+id/unfinished_scheduled_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/unfinished_remarks"
            android:layout_alignStart="@+id/unfinished_remarks"
            android:layout_below="@+id/unfinished_remarks"
            android:layout_marginTop="1dp"
            android:text="备注"
            android:textSize="14sp"
            android:textColor="#000000"
            android:alpha="0.65"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/unfinished_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:text="联系商家"
            android:textSize="12sp"
            android:textColor="#ffb300"/>

        <TextView
            android:id="@+id/unfinished_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/unfinished_contact"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="取消预约"
            android:textSize="12sp"
            android:textColor="#ffb300"/>

        <TextView
            android:id="@+id/unfinished_finish_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/unfinished_cancel_order"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="完成订单"
            android:textSize="12sp"
            android:textColor="#ffb300"/>

    </RelativeLayout>
</LinearLayout>