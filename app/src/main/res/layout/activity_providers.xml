<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.space.care.activity.ProvidersActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 搜索结果  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/providers_sort_complex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="综合排序"
                    android:textSize="24sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:alpha="0.65"/>

                <TextView
                    android:id="@+id/providers_sort_rating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="按评价排序"
                    android:textSize="24sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:alpha="0.65"/>

                <TextView
                    android:id="@+id/providers_sort_distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="按距离排序"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:alpha="0.65"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:alpha="0.43"/>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/services_pullrefresher"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ListView
                    android:id="@+id/services_providers_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>

            </android.support.v4.widget.SwipeRefreshLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请重新尝试"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="320dp"/>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
