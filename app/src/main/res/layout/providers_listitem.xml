<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/pvd_item_avator"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        app:srcCompat="@mipmap/fserve_beauty" />

    <RelativeLayout
        android:id="@+id/pvd_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pvd_item_avator"
        android:layout_toRightOf="@+id/pvd_item_avator"
        android:layout_toEndOf="@+id/pvd_item_avator">


        <TextView
            android:id="@+id/pvd_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:textSize="20sp"
            android:textColor="#000000"
            android:alpha="0.65"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/pvd_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pvd_item_name"
            android:layout_marginTop="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:text="地点："
            android:textSize="16sp"
            android:textColor="#000000"
            android:alpha="0.54"
            android:maxLines="2"
            android:ellipsize="middle"/>

        <TextView
            android:id="@+id/pvd_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pvd_item_location"
            android:layout_marginTop="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:text="距离："
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:alpha="0.87"
            android:maxLines="2"
            android:ellipsize="middle"/>

        <TextView
            android:id="@+id/pvd_item_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价："
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:alpha="0.87"
            android:maxLines="2"
            android:ellipsize="middle"
            android:layout_above="@+id/pvd_item_price"
            android:layout_alignLeft="@+id/pvd_item_peoplenum"
            android:layout_alignStart="@+id/pvd_item_peoplenum" />

        <TextView
            android:id="@+id/pvd_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pvd_item_distance"
            android:layout_marginTop="3dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:text="价格区间："
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:alpha="0.87"
            android:maxLines="2"
            android:ellipsize="middle"/>

        <TextView
            android:id="@+id/pvd_item_peoplenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务人次："
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:alpha="0.87"
            android:maxLines="2"
            android:ellipsize="middle"
            android:layout_alignBaseline="@+id/pvd_item_price"
            android:layout_alignBottom="@+id/pvd_item_price"
            android:layout_toRightOf="@+id/pvd_item_price"
            android:layout_toEndOf="@+id/pvd_item_price"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/pvd_item_introduction"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pvd_item_container"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/pvd_item_avator"
        android:layout_toRightOf="@+id/pvd_item_avator"
        android:layout_marginLeft="4dp"
        android:text="店铺服务简介"
        android:textColor="#000000"
        android:alpha="0.54"/>


</RelativeLayout>